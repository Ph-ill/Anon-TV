<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="?attr/colorPrimary"
                android:centerColor="?attr/colorPrimaryVariant"
                android:endColor="?attr/colorSecondary" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorAccent" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="?attr/colorSecondary"
                android:centerColor="?attr/colorSecondaryVariant"
                android:endColor="?attr/colorPrimary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="?attr/colorSurface"
                android:centerColor="?attr/colorBackground"
                android:endColor="?attr/colorSurface" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorDivider" />
        </shape>
    </item>
</selector> 